# Prisma Database URL
DATABASE_URL="file:./data/monitor.db"

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Monitoring Configuration
MONITOR_INTERVAL_MS=60000
SPEED_DROP_THRESHOLD_MBPS=15
SPEED_DROP_PERCENT=30
RETENTION_HOURS=168
SPEED_TEST_MAX_TIME=20000
SIMULATION_MODE=false

# Network Speed Test Configuration
# For accurate results on fast connections (>100 Mbps):
# - Use larger file sizes (20MB+) to allow TCP ramp-up
# - Increase timeout to accommodate larger downloads
# - Upload test should also be substantial (5MB+)
NETWORK_TEST_FILE_SIZE_BYTES=20000000
NETWORK_TEST_UPLOAD_SIZE_BYTES=5000000
NETWORK_TEST_MAX_RETRIES=3
NETWORK_TEST_TIMEOUT_MS=30000
NETWORK_TEST_CONNECTIVITY_URL=https://www.google.com
NETWORK_TEST_MAX_REALISTIC_SPEED=1000
NETWORK_TEST_MAX_REALISTIC_UPLOAD_SPEED=500

# WebSocket Configuration
WS_PATH=/ws

# Archive Configuration
ARCHIVE_ENABLED=true
ARCHIVE_HOUR=0
ARCHIVE_RETENTION_DAYS=30

# Data Directory
DATA_DIR=./data

# CORS Configuration (comma-separated origins, optional)
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
HTTP_LOGGING=true
